<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="lantacti"
            type="com.pandorina.periodictableapp.data.model.LantActi" />
    </data>

    <LinearLayout
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:gravity="center"
        android:orientation="vertical"
        app:setBackground="@{lantacti.background}">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{lantacti.range}"
            android:textSize="10sp"
            android:textStyle="bold"
            app:setTextColor="@{lantacti.background}"
            tools:ignore="SmallSp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{lantacti.title}"
            android:textColor="@color/color_7"
            android:textSize="10sp"
            tools:ignore="SmallSp" />
    </LinearLayout>
</layout>